<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.music.fm544.Fragment.CollectSub.CollectSubThreeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/background"></ImageButton>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《544FM》电音版"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="19dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:03 by FM544"
                android:textColor="#C3C9C9"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"></TextView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

