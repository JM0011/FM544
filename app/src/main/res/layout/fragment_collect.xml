<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.music.fm544.Fragment.CollectFragment">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_weight="4"
        android:background="#FFFFFF"
        android:gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="专辑"
            android:textColor="#5C5E5E"
            android:textSize="17sp" />


        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="歌手"
            android:textSize="17sp"
            android:textColor="#F80202"
            />

        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="视频"
            android:textSize="17sp"
            android:textColor="#5C5E5E" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/background"></ImageButton>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《544FM》电音版"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="19dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:03 by FM544"
                android:textColor="#C3C9C9"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"></TextView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
